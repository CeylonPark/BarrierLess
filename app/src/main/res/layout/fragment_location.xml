<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/locationSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="23dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_location_search"
                android:hint="장소, 버스, 지하철, 주소 검색"
                android:fontFamily="@font/nanum_gothic"
                android:textSize="14sp"
                android:textColor="#b8b8b8"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_location_search"
                android:background="#fff"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ImageButton
            android:id="@+id/toiletBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toilet"
            android:background="@drawable/bg_shortcuts"
            app:layout_constraintTop_toBottomOf="@id/locationSearch"
            app:layout_constraintStart_toStartOf="@+id/locationSearch"
            android:layout_marginTop="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/toiletBtn"
            app:layout_constraintStart_toStartOf="@id/toiletBtn"
            android:layout_marginTop="4dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="화장실"
            android:fontFamily="@font/nanum_gothic"
            android:textSize="13sp"
            android:textColor="#000"/>

    <ImageButton
            android:id="@+id/foodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_spoon_fork"
            android:background="@drawable/bg_shortcuts"
            app:layout_constraintTop_toBottomOf="@id/locationSearch"
            app:layout_constraintStart_toEndOf="@id/toiletBtn"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/foodBtn"
            app:layout_constraintStart_toStartOf="@id/foodBtn"
            android:layout_marginTop="4dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="음식점"
            android:fontFamily="@font/nanum_gothic"
            android:textSize="13sp"
            android:textColor="#000"/>

    <ImageButton
            android:id="@+id/elevatorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_elevator"
            android:background="@drawable/bg_shortcuts"
            app:layout_constraintTop_toBottomOf="@id/locationSearch"
            app:layout_constraintStart_toEndOf="@id/foodBtn"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/elevatorBtn"
            app:layout_constraintStart_toStartOf="@id/elevatorBtn"
            android:layout_marginTop="4dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="승강기"
            android:fontFamily="@font/nanum_gothic"
            android:textSize="13sp"
            android:textColor="#000"/>
</androidx.constraintlayout.widget.ConstraintLayout>