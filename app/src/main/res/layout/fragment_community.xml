<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
            android:id="@+id/myReportImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/bg_my_report"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/myReportImg"
            app:layout_constraintStart_toStartOf="@id/myReportImg"
            app:layout_constraintEnd_toEndOf="@id/myReportImg"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="12sp"
            android:textColor="#949494"
            android:includeFontPadding="false"
            android:text="내 장소"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/myReportImg"
            app:layout_constraintStart_toStartOf="@id/myReportImg"
            app:layout_constraintEnd_toEndOf="@id/myReportImg"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="20sp"
            android:textColor="@color/main_blue"
            android:includeFontPadding="false"
            android:text="3"/>

    <ImageView
            android:id="@+id/volunteerProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/bg_volunteer_progress_bar"/>
    <ProgressBar
            android:layout_width="217dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@id/volunteerProgressBar"
            app:layout_constraintStart_toStartOf="@id/volunteerProgressBar"
            app:layout_constraintEnd_toEndOf="@id/volunteerProgressBar"
            android:layout_marginBottom="12dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="72"
            android:progressBackgroundTint="#d3d3d3"
            android:progressTint="@color/main_blue"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/volunteerProgressBar"
            app:layout_constraintStart_toStartOf="@id/volunteerProgressBar"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="12sp"
            android:textColor="#000"
            android:includeFontPadding="false"
            android:text="봉사시간 1시간까지.."/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/volunteerProgressBar"
            app:layout_constraintEnd_toEndOf="@id/volunteerProgressBar"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="14sp"
            android:textColor="@color/main_blue"
            android:includeFontPadding="false"
            android:text="72%"/>

    <FrameLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>