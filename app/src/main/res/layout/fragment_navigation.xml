<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:background="@drawable/bg_location_field_container"
            android:clickable="true"
            android:focusable="true">
    <ImageButton
            android:id="@+id/swapDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_swap"
            android:background="#fff"/>
    <EditText
            android:id="@+id/startingPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/swapDestination"
            app:layout_constraintStart_toEndOf="@id/swapDestination"
            android:layout_marginTop="-34dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_location_field"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="13sp"
            android:textColor="#9f9f9f"
            android:includeFontPadding="false"
            android:hint="출발지 입력"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_location_field"
            app:layout_constraintTop_toBottomOf="@id/startingPoint"
            app:layout_constraintStart_toStartOf="@id/startingPoint"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="13sp"
            android:textColor="#9f9f9f"
            android:includeFontPadding="false"
            android:hint="도착지 입력"/>
</androidx.constraintlayout.widget.ConstraintLayout>