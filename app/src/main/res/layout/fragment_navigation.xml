<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_location_field_container"
            android:clickable="true"
            android:focusable="true">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
            <ImageButton
                    android:id="@+id/swapDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_swap"
                    android:background="#fff"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/startPointBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_location_field"/>
                    <TextView
                            android:id="@+id/startPointText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textSize="13sp"
                            android:textColor="#9f9f9f"
                            android:includeFontPadding="false"
                            android:text="출발지 입력"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                    <ImageButton
                            android:id="@+id/endPointBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_location_field"/>
                    <TextView
                            android:id="@+id/endPointText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textSize="13sp"
                            android:textColor="#9f9f9f"
                            android:includeFontPadding="false"
                            android:text="도착지 입력"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>