<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp">
        <ImageButton
                android:id="@+id/swapDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="34dp"/>
        <EditText
                android:id="@+id/startingPoint"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="#e0e0e0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/swapDestination"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  출발지"
                android:fontFamily="@font/nanum_gothic"
                android:textSize="14sp"
                android:textColor="#9f9f9f"/>
        <EditText
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="#e0e0e0"
                app:layout_constraintTop_toBottomOf="@id/startingPoint"
                app:layout_constraintStart_toStartOf="@id/startingPoint"
                android:layout_marginTop="15dp"
                android:hint="  도착지"
                android:fontFamily="@font/nanum_gothic"
                android:textSize="14sp"
                android:textColor="#9f9f9f"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:id="@+id/navigationBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/btn_report"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="140dp"
            android:text="길 찾기"
            android:textColor="#fff"
            android:fontFamily="@font/nanum_gothic_bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>