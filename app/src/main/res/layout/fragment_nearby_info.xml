<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/bg_nearby_info">
    <ImageView
            android:id="@+id/barrierFreeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"/>
    <TextView
            android:id="@+id/barrierFreeTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrierFreeImage"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="20sp"/>
    <TextView
            android:id="@+id/barrierFreeAdrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/barrierFreeImage"
            app:layout_constraintStart_toEndOf="@id/barrierFreeTypeText"
            android:layout_marginTop="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="10sp"
            android:textColor="#000"/>

    <ImageView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/barrierFreeTypeText"
            android:layout_marginTop="43dp"
            android:src="@drawable/ic_star"
            android:background="#0000"/>
    <TextView
            android:id="@+id/aText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/a"
            app:layout_constraintBottom_toBottomOf="@id/a"
            app:layout_constraintStart_toStartOf="@id/a"
            app:layout_constraintEnd_toEndOf="@id/a"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="9sp"
            android:textColor="@color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/a"
            app:layout_constraintStart_toStartOf="@id/a"
            app:layout_constraintEnd_toEndOf="@id/a"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="8sp"
            android:text="접근성"
            android:textColor="#838383"/>
    <ImageView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/a"
            app:layout_constraintStart_toEndOf="@id/a"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_star"
            android:background="#0000"/>
    <TextView
            android:id="@+id/bText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/b"
            app:layout_constraintBottom_toBottomOf="@id/b"
            app:layout_constraintStart_toStartOf="@id/b"
            app:layout_constraintEnd_toEndOf="@id/b"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="9sp"
            android:textColor="@color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/b"
            app:layout_constraintStart_toStartOf="@id/b"
            app:layout_constraintEnd_toEndOf="@id/b"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="8sp"
            android:text="편의성"
            android:textColor="#838383"/>
    <ImageView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/b"
            app:layout_constraintStart_toEndOf="@id/b"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_star"
            android:background="#0000"/>
    <TextView
            android:id="@+id/cText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/c"
            app:layout_constraintBottom_toBottomOf="@id/c"
            app:layout_constraintStart_toStartOf="@id/c"
            app:layout_constraintEnd_toEndOf="@id/c"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="9sp"
            android:textColor="@color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/c"
            app:layout_constraintStart_toStartOf="@id/c"
            app:layout_constraintEnd_toEndOf="@id/c"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="8sp"
            android:text="안정성"
            android:textColor="#838383"/>
    <ImageButton
            android:id="@+id/reviewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/c"
            app:layout_constraintStart_toEndOf="@id/c"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/bg_btn_review"/>
    <TextView
            android:id="@+id/reviewBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/reviewBtn"
            app:layout_constraintBottom_toBottomOf="@id/reviewBtn"
            app:layout_constraintStart_toStartOf="@id/reviewBtn"
            app:layout_constraintEnd_toEndOf="@id/reviewBtn"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="별점 남기기"/>
</androidx.constraintlayout.widget.ConstraintLayout>