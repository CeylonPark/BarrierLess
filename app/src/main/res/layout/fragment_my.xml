<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">
    <ImageView
            android:id="@+id/profileImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_profile"
            android:scaleType="centerInside"
            />
    <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profileImg"
            app:layout_constraintStart_toStartOf="@id/profileImg"
            app:layout_constraintEnd_toEndOf="@id/profileImg"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:includeFontPadding="false"
            android:text="username123"/>
    <LinearLayout
            android:id="@+id/statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userName"
            app:layout_constraintStart_toStartOf="@id/userName"
            app:layout_constraintEnd_toEndOf="@id/userName"
            android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="90dp"
                android:layout_height="40dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:textSize="16sp"
                    android:textColor="@color/main_blue"
                    android:includeFontPadding="false"
                    android:text="3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:textSize="12sp"
                    android:textColor="#bdbdbd"
                    android:includeFontPadding="false"
                    android:text="제보"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_my_line"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="90dp"
                android:layout_height="40dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:textSize="16sp"
                    android:textColor="@color/main_blue"
                    android:includeFontPadding="false"
                    android:text="156"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:textSize="12sp"
                    android:textColor="#bdbdbd"
                    android:includeFontPadding="false"
                    android:text="포인트"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_my_line"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="90dp"
                android:layout_height="40dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textSize="16sp"
                android:textColor="@color/main_blue"
                android:includeFontPadding="false"
                android:text="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textSize="12sp"
                android:textColor="#bdbdbd"
                android:includeFontPadding="false"
                android:text="봉사시간"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <ImageView
            android:id="@+id/myLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/statistics"
            app:layout_constraintStart_toStartOf="@id/statistics"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_my_location"/>
    <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/myLocation"
            app:layout_constraintBottom_toBottomOf="@id/myLocation"
            app:layout_constraintEnd_toEndOf="@id/myLocation"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="15sp"
            android:textColor="@color/main_blue"
            android:includeFontPadding="false"
            android:text="도마동"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/a"
            app:layout_constraintEnd_toStartOf="@id/a"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="8sp"
            android:textColor="@color/main_blue"
            android:includeFontPadding="false"
            android:text="현위치"/>
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/myLocation"
            app:layout_constraintStart_toStartOf="@id/myLocation"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:includeFontPadding="false"
            android:text="사용자 제보"/>
    <ImageView
            android:id="@+id/miniProfileImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg_profile_mini"/>
    <TextView
            android:id="@+id/miniUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/miniProfileImg"
            app:layout_constraintStart_toEndOf="@id/miniProfileImg"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="12sp"
            android:textColor="#000"
            android:includeFontPadding="false"
            android:text="username456"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/miniUserName"
            app:layout_constraintStart_toStartOf="@id/miniUserName"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/noto_sans_kr_light"
            android:textSize="10sp"
            android:textColor="#000"
            android:includeFontPadding="false"
            android:text="제보 7"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/miniProfileImg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:src="@drawable/example"
            android:scaleType="fitXY"/>


</androidx.constraintlayout.widget.ConstraintLayout>