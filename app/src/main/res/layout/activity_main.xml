<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.naver.maps.map.MapFragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <com.naver.maps.map.widget.LocationButtonView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp" />

    <com.naver.maps.map.widget.LogoView
            android:id="@+id/naver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/view"
            app:layout_constraintStart_toEndOf="@id/location"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp" />

    <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/footer_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
            android:id="@+id/reportNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_report_background"
            android:src="@drawable/ic_bell_green"
            app:layout_constraintBottom_toTopOf="@id/view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="23dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:visibility="gone" />

    <ImageButton
            android:id="@+id/reportProblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_report_background"
            android:src="@drawable/ic_bell_orange"
            app:layout_constraintBottom_toTopOf="@id/reportNew"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aroundConstraint"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">
        <Button
                android:id="@+id/aroundBtn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/aroundConstraint"
                app:layout_constraintStart_toStartOf="@id/aroundConstraint"
                android:background="#00000000"/>
        <ImageView
                android:id="@+id/aroundTopBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bar_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        <ImageView
                android:id="@+id/around"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_around"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@id/aroundTopBar"
                app:layout_constraintStart_toStartOf="@id/aroundTopBar"
                app:layout_constraintEnd_toEndOf="@id/aroundTopBar"
                android:layout_marginTop="11dp"/>
        <TextView
                android:id="@+id/aroundText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/nanum_gothic"
                android:fontFamily="@font/nanum_gothic"
                android:textStyle="normal"
                android:textSize="9sp"
                android:textColor="#2088ff"
                android:gravity="center_horizontal"
                android:text="주변"
                app:layout_constraintTop_toBottomOf="@id/around"
                app:layout_constraintStart_toStartOf="@id/around"
                app:layout_constraintEnd_toEndOf="@id/around"
                android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/directionsConstraint"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/aroundConstraint"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp">
        <Button
                android:id="@+id/directionsBtn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/directionsConstraint"
                app:layout_constraintStart_toStartOf="@id/directionsConstraint"
                android:background="#00000000"/>
        <ImageView
                android:id="@+id/directionsTopBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bar_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />
        <ImageView
                android:id="@+id/directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_arrow_gray"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@id/directionsTopBar"
                app:layout_constraintStart_toStartOf="@id/directionsTopBar"
                app:layout_constraintEnd_toEndOf="@id/directionsTopBar"
                android:layout_marginTop="11dp"/>
        <TextView
                android:id="@+id/directionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/nanum_gothic"
                android:fontFamily="@font/nanum_gothic"
                android:textStyle="normal"
                android:textSize="9sp"
                android:textColor="#777"
                android:gravity="center_horizontal"
                android:text="길찾기"
                app:layout_constraintTop_toBottomOf="@id/directions"
                app:layout_constraintStart_toStartOf="@id/directions"
                app:layout_constraintEnd_toEndOf="@id/directions"
                android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/communityConstraint"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/directionsConstraint"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp">
        <Button
                android:id="@+id/communityBtn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/communityConstraint"
                app:layout_constraintStart_toStartOf="@id/communityConstraint"
                android:background="#00000000"/>
        <ImageView
                android:id="@+id/communityTopBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bar_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />
        <ImageView
                android:id="@+id/community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_community_gray"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@id/communityTopBar"
                app:layout_constraintStart_toStartOf="@id/communityTopBar"
                app:layout_constraintEnd_toEndOf="@id/communityTopBar"
                android:layout_marginTop="11dp"/>
        <TextView
                android:id="@+id/communityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/nanum_gothic"
                android:fontFamily="@font/nanum_gothic"
                android:textStyle="normal"
                android:textSize="9sp"
                android:textColor="#777"
                android:gravity="center_horizontal"
                android:text="커뮤니티 매핑"
                app:layout_constraintTop_toBottomOf="@id/community"
                app:layout_constraintStart_toStartOf="@id/community"
                app:layout_constraintEnd_toEndOf="@id/community"
                android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/myConstraint"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/communityConstraint"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp">
        <Button
                android:id="@+id/myBtn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/myConstraint"
                app:layout_constraintStart_toStartOf="@id/myConstraint"
                android:background="#00000000"/>
        <ImageView
                android:id="@+id/myTopBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bar_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />
        <ImageView
                android:id="@+id/my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_gray"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@id/myTopBar"
                app:layout_constraintStart_toStartOf="@id/myTopBar"
                app:layout_constraintEnd_toEndOf="@id/myTopBar"
                android:layout_marginTop="11dp"/>
        <TextView
                android:id="@+id/myText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:textStyle="normal"
                android:textSize="9sp"
                android:textColor="#777"
                android:gravity="center_horizontal"
                android:text="MY"
                app:layout_constraintTop_toBottomOf="@id/my"
                app:layout_constraintStart_toStartOf="@id/my"
                app:layout_constraintEnd_toEndOf="@id/my"
                android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>